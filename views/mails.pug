extends layout
block content    
    include navbar
    .container
        .row
                .chat_window
                    .top_menu
                        .buttons
                            .button.close
                            .button.minimize
                            .button.maximize
                        .title 
                            h1 title                            
                    .messages#mes
                        each db in arr
                            if user._id==db.reader_id
                                .message.right
                                    
                                    .text_wrapper
                                        .text
                                            p.pb #{db.writer_name}
                                            hr
                                            p #{db.message}
                                            p.pf #{db.date_message.toLocaleString()}
                            else if user._id==db.writer_id        
                                .message.left
                                    
                                    .text_wrapper
                                        .text
                                            p.pb #{db.writer_name}
                                            hr
                                            p #{db.message}
                                            p.pf #{db.date_message.toLocaleString()}
                                
                    .bottom_wrapper.clearfix
                        <div class="dropdown">
                            h3.d-inline.mr-2 Kimga xabar yubormoqchisiz:
                            a.dropd(class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Tanlang
                            .div(class="dropdown-menu" aria-labelledby="dropdownMenuLink")
                                each member in users
                                    if(member._id!=user._id)
                                        a(class="dropdown-item" href="/auth_messages/"+member._id+'/'+user._id) #{member.username}                                
